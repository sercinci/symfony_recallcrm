{% block content %}
            </div>
            <div class="col-md-7 content">
                <h1>Acer</h1>
                      <div class="containerFeedbackTable">
                        <table class="table table-bordered tableFeedback">
                            <tr>
                                <th>Telefono:</th>
                                <th>945789345</th>
                            </tr>
                            <tr>
                                <td>Nome cognome:</td>
